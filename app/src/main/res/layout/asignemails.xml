<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assign Emails"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nursery"
            android:textSize="20sp"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editEmailNursery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email for Nursery"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/blue"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 1"
            android:textSize="20sp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editEmailGrade1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email for Grade 1"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/blue"
            android:layout_marginBottom="16dp"/>

        <!-- Grade 2 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 2"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editEmailGrade2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email for Grade 2"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/green"
            android:layout_marginBottom="16dp"/>

        <!-- Grade 3 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 3"
            android:textSize="20sp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editEmailGrade3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email for Grade 3"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/orange"
            android:layout_marginBottom="16dp"/>

        <!-- Grade 4 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 4"
            android:textSize="20sp"
            android:textColor="@color/purple"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editEmailGrade4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email for Grade 4"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/purple"
            android:layout_marginBottom="16dp"/>

        <!-- Grade 5 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 5"
            android:textSize="20sp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editEmailGrade5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email for Grade 5"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/red"
            android:layout_marginBottom="16dp"/>

        <!-- Grade 6 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 6"
            android:textSize="20sp"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editEmailGrade6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email for Grade 6"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/yellow"
            android:layout_marginBottom="16dp"/>

        <!-- Grade 7 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 7"
            android:textSize="20sp"
            android:textColor="@color/teal"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editEmailGrade7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email for Grade 7"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/teal"
            android:layout_marginBottom="16dp"/>

        <!-- Grade 8 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 8"
            android:textSize="20sp"
            android:textColor="@color/pink"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/editEmailGrade8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email for Grade 8"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/pink"
            android:layout_marginBottom="16dp"/>

        <!-- Button to Save -->
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@color/purple"
            android:layout_marginTop="16dp"/>

           </LinearLayout>
</ScrollView>
